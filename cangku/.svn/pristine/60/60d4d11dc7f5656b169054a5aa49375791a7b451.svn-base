	/**
	 * 存储功能项
	 * */
	public void putFunctionSharePreferences(List<Map<String, Object>> list) {
		for (int i = 0; i < list.size(); i++) {
			mSharedPreferences
					.edit()
					.putString("gridview_item" + i,
							list.get(i).get("name").toString()).commit();
			mSharedPreferences
					.edit()
					.putInt("gridview_img" + i,
							Integer.parseInt(list.get(i).get("image")
									.toString())).commit();
		}
		if (list.size() < 8) {
			for (int i = list.size(); i < 8; i++) {
				mSharedPreferences.edit().putString("gridview_item" + i, "")
						.commit();
				// -1代表该键值对里面没有东西
				mSharedPreferences.edit().putInt("gridview_img" + i, -1)
						.commit();
			}
		}
		mSharedPreferences.edit()
				.putBoolean(ShareprefenceBean.GRIDVIEW_ISFIRST, false).commit();
	}
	
