	/**
	 * 根据选择功能项来启动相应activity
	 * */
	public void switchFunctionItem(String name) {
		Intent intent = new Intent();
		for (int i = 0; i < 16; i++) {
			if (name.equals("新增货品")) {
				if (mSharedPreferences.getInt(ShareprefenceBean.IS_LOGIN, -1) == 1) {
					if (RightsHelper.isHaveRight(RightsHelper.hp_addedit,
							mSharedPreferences) == true) {
						intent.setClass(getActivity(), AddActivity.class);
						startActivity(intent);
					} else {
						Toast.makeText(getActivity(), "对不起，你没有添加货品的权限",
								Toast.LENGTH_SHORT).show();
					}
				} else if (mSharedPreferences.getInt(
						ShareprefenceBean.IS_LOGIN, -1) == -1) {
					Toast.makeText(getActivity(), "离线模式下不能进行新增货品操作",
							Toast.LENGTH_SHORT).show();
				}
				break;
			} else if (name.equals("新增入库")) {
				if (RightsHelper.isHaveRight(RightsHelper.dj_rk_add,
						mSharedPreferences) == true) {
					intent.setClass(getActivity(), AddDJActivity.class);
					intent.putExtra("op_type", 1);// 入库单据
					startActivity(intent);
				} else {
					Toast.makeText(getActivity(), "对不起，你没有的新增入库的权限",
							Toast.LENGTH_SHORT).show();
				}
				break;
			} else if (name.equals("新增出库")) {
				if (RightsHelper.isHaveRight(RightsHelper.dj_ck_add,
						mSharedPreferences) == true) {
					intent.setClass(getActivity(), AddDJActivity.class);
					intent.putExtra("op_type", 2);// 出库单局
					startActivity(intent);
				} else {
					Toast.makeText(getActivity(), "对不起，你没有的新增出库的权限",
							Toast.LENGTH_SHORT).show();
				}
				break;
			} else if (name.equals("新增盘点")) {
				if (RightsHelper.isHaveRight(RightsHelper.dj_pd_add,
						mSharedPreferences) == true) {
					intent.setClass(getActivity(), PanDianActivity.class);
					startActivity(intent);
				} else {
					Toast.makeText(getActivity(), "对不起，你没有的新增盘点的权限",
							Toast.LENGTH_SHORT).show();
				}
				break;
			} else if (name.equals("货品管理")) {
				intent.setClass(getActivity(), HpInfo_ListActivity.class);
				startActivity(intent);
				break;
			} else if (name.equals("本地单据")) {
				intent.setClass(getActivity(), History_DJActivity.class);
				startActivity(intent);
				break;
			} else if (name.equals("单据明细")) {
				if (mSharedPreferences.getInt(ShareprefenceBean.IS_LOGIN, -1) == 1) {
					intent.setClass(getActivity(), Moved_DJ.class);
					intent.putExtra("todayDJ", false);
					startActivity(intent);
				} else if (mSharedPreferences.getInt(
						ShareprefenceBean.IS_LOGIN, -1) == -1) {
					Toast.makeText(getActivity(), "离线模式下不能查看服务端历史明细",
							Toast.LENGTH_SHORT).show();
				}
				break;
			} else if (name.equals("数据同步")) {
				intent.setClass(getActivity(), WebHelper.class);
				// intent.setClass(this, RecoverActivity.class);
				startActivity(intent);
				break;
			} else if (name.equals("服务端单据")) {
				if (mSharedPreferences.getInt(ShareprefenceBean.IS_LOGIN, -1) == 1) {
					if (WebserviceImport.isOpenNetwork(getActivity())) {
						intent.setClass(getActivity(), NetDJActivity.class);
						startActivity(intent);
					} else {
						Toast.makeText(getActivity(), "网络未连接",
								Toast.LENGTH_SHORT).show();
					}
				} else if (mSharedPreferences.getInt(
						ShareprefenceBean.IS_LOGIN, -1) == -1) {
					Toast.makeText(getActivity(), "离线模式下不能查看服务端单据",
							Toast.LENGTH_SHORT).show();
				}

				break;
			} else if (name.equals("反馈")) {
				if (WebserviceImport.isOpenNetwork(getActivity())) {
					agent = new FeedbackAgent(getActivity());
					agent.sync();
					agent.startFeedbackActivity();
				} else {
					Toast.makeText(getActivity(), "网络未连接", Toast.LENGTH_SHORT)
							.show();
				}
				break;
			}
		}
	}
	
	private int dp2px(int dp) {
		return (int) TypedValue.applyDimension(TypedValue.COMPLEX_UNIT_DIP, dp,
				getActivity().getResources().getDisplayMetrics());
	}
}
