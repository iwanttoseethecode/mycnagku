<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <ImageView
        android:id="@+id/guide3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ziti_7" />

    <ImageView
        android:id="@+id/guide3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide3_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/guide3" />

    <ImageView
        android:id="@+id/guide3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide3_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ziti_8" />

    <ImageView
        android:id="@+id/t3_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide3_3"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="30.0dip"
        android:rotation="180"
        android:src="@drawable/tutorial_next" />

</RelativeLayout>