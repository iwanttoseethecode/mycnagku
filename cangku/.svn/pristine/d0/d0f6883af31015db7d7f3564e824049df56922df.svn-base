<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <ImageView
        android:id="@+id/guide1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ziti_1" />

    <ImageView
        android:id="@+id/guide1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide1_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/guide1" />

    <ImageView
        android:id="@+id/guide1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide1_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ziti_2"/>

    <ImageView
        android:id="@+id/t1_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide1_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20.0dip"
        android:rotation="180"
        android:src="@drawable/tutorial_next" />

</RelativeLayout>