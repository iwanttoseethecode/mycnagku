<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <translate
        android:fromXDelta="-100%p"
        android:toXDelta="0%"
        android:fromYDelta="0%"
        android:toYDelta="0%"
        android:duration="1500"/>
     <!--
           fromXDelta: X轴方向开始位置，可以是%，也可以是具体的像素 具体见图(p现对于parent)

			toXDelta:   X轴方向结束位置，可以是%，也可以是具体的像素(p现对于parent)

			fromYDelta: Y轴方向开始位置，可以是%，也可以是具体的像素(p现对于parent)

			toYDelta:    Y轴方向结束位置，可以是%，也可以是具体的像素(p现对于parent)
      -->
</set>
