<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/theme_orange"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_click_white_grey"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15.2dp"
            android:paddingTop="15.2dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.8dip"
                android:src="@drawable/customer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.4dip"
                android:layout_weight="1"
                android:text="客户管理"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="查看"
                android:textColor="#999999"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.8dip"
                android:src="@drawable/advance_gray_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supplierLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:background="@drawable/app_click_white_grey"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15.2dp"
            android:paddingTop="15.2dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.8dip"
                android:src="@drawable/supplier" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.4dip"
                android:layout_weight="1"
                android:text="供应商管理"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="查看"
                android:textColor="#999999"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.8dip"
                android:src="@drawable/advance_gray_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addvisitorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:background="@drawable/app_click_white_grey"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15.2dp"
            android:paddingTop="15.2dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.8dip"
                android:src="@drawable/visit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.4dip"
                android:layout_weight="1"
                android:text="添加拜访记录"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="添加"
                android:textColor="#999999"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.8dip"
                android:src="@drawable/advance_gray_btn" />
        </LinearLayout>
    </LinearLayout>
	
    <TextView
        android:id="@+id/coverView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3000000"
        android:gravity="center"
        android:text="离线模式下不能进行客户管理"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />
    
</FrameLayout>