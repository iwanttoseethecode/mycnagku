<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <ImageView
        android:id="@+id/guide4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ziti_3"/>

    <ImageView
        android:id="@+id/guide4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide4_1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        android:src="@drawable/guide4" />
    <ImageView
        android:id="@+id/guide4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide4_2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:src="@drawable/ziti_4"/>
     <ImageView
        android:id="@+id/t4_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide4_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.0dip"
        android:rotation="180"
        android:src="@drawable/tutorial_next" />
</RelativeLayout>