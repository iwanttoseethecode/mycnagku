<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.guantang.cangkuonline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme_orange"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="center_vertical"
            android:src="@drawable/back_white_btn" />

        <TextView
            android:id="@+id/title"
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="货品详情" />

        <TextView
            android:id="@+id/mod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
    
    <com.guantang.cangkuonline.customview.PagerSlidingTabStrip
        android:id="@+id/pagerTabStrip1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:pstsDividerPadding="5dp"
        app:pstsTabPaddingLeftRight="5dp"
        android:background="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagercontent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
