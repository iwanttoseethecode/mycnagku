<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_orange"
    android:gravity="center" >

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/login_new"
        android:gravity="center"
        android:text="注册新用户"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:id="@+id/bottomMoreLayout"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/more"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/more"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/server_pref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#a0008B00"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="服务器配置"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#a0008B00"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="帮助"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#a0008B00"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="本机串号"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/our"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#a0008B00"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="联系我们"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <ImageView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/guantang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/view1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/view1"
                android:gravity="bottom"
                android:text="GUAN TANG"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/systemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_icon"
                android:layout_alignTop="@id/home_icon"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/home_icon"
                android:gravity="center_vertical"
                android:text="冠唐云仓库管理系统"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/lin_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="服务器："
                        android:textColor="@color/loginsertxtcolor"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/serverlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/server_txtleft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/server"
                            android:layout_weight="1"
                            android:background="@drawable/text2_left"
                            android:ellipsize="start"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="请选择服务器" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/text2_right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lin_layout1"
                    android:layout_alignRight="@id/lin_layout1"
                    android:layout_below="@id/lin_layout1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="公司名："
                        android:textColor="@color/loginsertxtcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/company_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/text"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lin_layout2"
                    android:layout_alignRight="@id/lin_layout2"
                    android:layout_below="@id/lin_layout2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="用户名："
                        android:textColor="@color/loginsertxtcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/user_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/text"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lin_layout3"
                    android:layout_alignRight="@id/lin_layout3"
                    android:layout_below="@id/lin_layout3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="密    码："
                        android:textColor="@color/loginsertxtcolor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/pass_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/text"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/botton1"
            android:text="登  录"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/lixianBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/botton1"
            android:text="离线登录"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/box_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/isShowPassWord_Box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示密码"
                android:textColor="#c3a386"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/rememberBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="记住密码"
                android:textColor="#c3a386"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>